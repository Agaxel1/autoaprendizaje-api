{
  "name": "autoaprendizaje-api",
  "version": "1.0.0",
  "description": "API REST para Sistema de Suficiencia AcadÃ©mica construida con Fastify y PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:watch": "nodemon --watch src --ext js,json server.js",
    "dev:debug": "nodemon --inspect server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --ci --coverage --watchAll=false",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "lint:check": "eslint src/ --ext .js --max-warnings 0",
    "format": "prettier --write \"src/**/*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,md}\"",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "db:backup": "node scripts/backup.js",
    "build": "echo 'No build step required for Node.js'",
    "build:docs": "node scripts/generate-docs.js",
    "docker:build": "docker build -t plataforma-educativa-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env plataforma-educativa-api",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f api",
    "health": "node healthcheck.js",
    "validate": "npm run lint:check && npm run format:check && npm run test:ci",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "deps:check": "npm-check-updates",
    "deps:update": "npm-check-updates -u && npm install",
    "clean": "rm -rf node_modules coverage dist",
    "reset": "npm run clean && npm install"
  },
  "keywords": [
    "fastify",
    "postgresql",
    "education",
    "api",
    "rest",
    "academic",
    "learning",
    "elearning",
    "lms",
    "jwt",
    "authentication",
    "gamification"
  ],
  "author": {
    "name": "Equipo de Desarrollo",
    "email": "dev@plataforma-educativa.com",
    "url": "https://github.com/tu-usuario/plataforma-educativa-api"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/plataforma-educativa-api.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/plataforma-educativa-api/issues"
  },
  "homepage": "https://github.com/tu-usuario/plataforma-educativa-api#readme",
  "dependencies": {
    "@fastify/compress": "^6.4.0",
    "@fastify/cookie": "^9.2.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/env": "^4.2.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.0.0",
    "@fastify/postgres": "^5.2.2",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/redis": "^6.1.1",
    "@fastify/session": "^10.7.0",
    "@fastify/static": "^6.12.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/under-pressure": "^8.3.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "crypto": "^1.0.1",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.5.0",
    "excel4node": "^1.8.2",
    "express-rate-limit": "^7.1.5",
    "fastify": "^4.29.1",
    "fastify-plugin": "^4.5.1",
    "fastify-postgres": "^3.7.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.7",
    "pdf-lib": "^1.17.1",
    "pg": "^8.11.3",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "qrcode": "^1.5.3",
    "sanitize-html": "^2.11.0",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "autocannon": "^7.12.0",
    "clinic": "^13.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "npm-check-updates": "^16.14.11",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "tap": "^18.5.7"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "volta": {
    "node": "18.18.2",
    "npm": "9.8.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/migrations/**",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/src/**/*.test.js"
    ],
    "testTimeout": 30000,
    "verbose": true
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "prefer-const": "error",
      "no-var": "error",
      "object-shorthand": "error",
      "prefer-arrow-callback": "error",
      "prefer-template": "error",
      "template-curly-spacing": "error",
      "arrow-spacing": "error",
      "prefer-destructuring": [
        "error",
        {
          "array": true,
          "object": true
        }
      ],
      "no-duplicate-imports": "error",
      "no-useless-rename": "error"
    },
    "ignorePatterns": [
      "node_modules/",
      "coverage/",
      "dist/",
      "build/"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "src/**/*.test.js",
      "node_modules/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/tu-usuario"
  },
  "cpu": [
    "x64",
    "arm64"
  ],
  "os": [
    "linux",
    "darwin",
    "win32"
  ]
}
